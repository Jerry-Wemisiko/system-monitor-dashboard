<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Sys-Monitor Dashboard</title>

  <!-- Bootstrap CSS -->
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />

  <!-- Custom CSS for additional styling -->
  <link rel="stylesheet" href="/css/style.css" />

  <!-- Chart.js -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>

<body class="bg-light">

  <!-- Header Section -->
  <header class="bg-primary text-white text-center py-5">
    <h1 class="display-4">üñ•Ô∏è System Monitor Dashboard</h1>
    <p class="lead">Real-time system stats at your fingertips</p>
  </header>

  <!-- Main Content -->
  <main class="container my-5">

    <div class="row">
      <!-- Total Memory Card -->
      <div class="col-md-4 mb-4">
        <div class="card text-center">
          <div class="card-header bg-info text-white">
            <h4>Total Memory</h4>
          </div>
          <div class="card-body">
            <h5 id="totalMem" class="display-4">Loading...</h5>
          </div>
        </div>
      </div>

      <!-- Free Memory Card -->
      <div class="col-md-4 mb-4">
        <div class="card text-center">
          <div class="card-header bg-warning text-white">
            <h4>Free Memory</h4>
          </div>
          <div class="card-body">
            <h5 id="freeMem" class="display-4">Loading...</h5>
          </div>
        </div>
      </div>

      <!-- Uptime Card -->
      <div class="col-md-4 mb-4">
        <div class="card text-center">
          <div class="card-header bg-success text-white">
            <h4>Uptime (Seconds)</h4>
          </div>
          <div class="card-body">
            <h5 id="uptime" class="display-4">Loading...</h5>
          </div>
        </div>
      </div>
    </div>

    <!-- Chart for System Stats -->
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-header bg-dark text-white">
            <h4>System Stats Graph</h4>
          </div>
          <div class="card-body">
            <canvas id="statsChart"></canvas>
          </div>
        </div>
      </div>
    </div>

  </main>

  <!-- Socket.IO and JS goes at the bottom of the body -->
  <script src="/socket.io/socket.io.js"></script>

  <script>
    const socket = io();

    // Set up the chart
    const ctx = document.getElementById('statsChart').getContext('2d');
    const chart = new Chart(ctx, {
      type: 'line',
      data: {
        labels: [], // Time labels
        datasets: [
          {
            label: 'Total Memory (MB)',
            data: [],
            borderColor: 'rgb(0, 123, 255)',
            fill: false,
            tension: 0.1
          },
          {
            label: 'Free Memory (MB)',
            data: [],
            borderColor: 'rgb(255, 193, 7)',
            fill: false,
            tension: 0.1
          },
          {
            label: 'Uptime (Seconds)',
            data: [],
            borderColor: 'rgb(40, 167, 69)',
            fill: false,
            tension: 0.1
          }
        ]
      },
      options: {
        responsive: true,
        plugins: {
          legend: {
            display: true,
            position: 'top'
          },
          tooltip: {
            enabled: true
          }
        },
        scales: {
          x: {
            type: 'linear',
            position: 'bottom',
            ticks: {
              autoSkip: true,
              maxTicksLimit: 20
            },
            title: {
              display: true,
              text: 'Time (milliseconds)',
            }
          },
          y: {
            beginAtZero: true,
            title: {
              display: true,
              text: 'Value',
            }
          }
        }
      }
    });

    // Real-time data update
    socket.on('system-stats', (data) => {
      const totalMB = (data.totalMemory / 1024 / 1024).toFixed(2);  // Convert bytes to MB
      const freeMB = (data.freeMemory / 1024 / 1024).toFixed(2);    // Convert bytes to MB
      const uptimeSeconds = data.uptime;                             // Keep uptime in seconds

      // Update memory stats on the page
      document.getElementById('totalMem').textContent = `${totalMB} MB`;
      document.getElementById('freeMem').textContent = `${freeMB} MB`;
      document.getElementById('uptime').textContent = `${uptimeSeconds} seconds`;

      // Update chart data
      const currentTime = Date.now();
      chart.data.labels.push(currentTime);
      chart.data.datasets[0].data.push(totalMB);
      chart.data.datasets[1].data.push(freeMB);
      chart.data.datasets[2].data.push(uptimeSeconds);

      // Limit chart data length to 100 points for smooth performance
      if (chart.data.labels.length > 100) {
        chart.data.labels.shift();
        chart.data.datasets.forEach(dataset => dataset.data.shift());
      }

      chart.update();
    });
  </script>

  <!-- Optional Bootstrap JS -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.0.7/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>

</html>
